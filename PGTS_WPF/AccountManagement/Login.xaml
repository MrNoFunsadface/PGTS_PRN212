<Window x:Class="PGTS_WPF.AccountManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGTS_WPF"
        mc:Ignorable="d"
        Title="Login" Height="360" Width="400"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,20"/>
            <TextBlock Text="Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>
            <Button Content="Login" Click="btnLogin_Click"/>
            <Label Content="----------or----------" HorizontalAlignment="Center"/>
            <Button Content="Register" Click="btnRegister_Click" Margin="0,0,0,10"/>
            <Button Content="Forgot Password" Click="btnForgotPassword_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
