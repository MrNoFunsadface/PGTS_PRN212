<Window x:Class="PGTS_WPF.UserWindows.SecurityWindows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGTS_WPF.UserWindows.SecurityWindows"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="Reset Password" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Current Password" Margin="0,0,0,10"/>
            <PasswordBox Name="txtPassword" Margin="0,0,0,10" />
            <TextBlock Text="New Password" Margin="0,0,0,10"/>
            <PasswordBox Name="txtNewPassword" Margin="0,0,0,10" />
            <TextBlock Text="Confirm New Password" Margin="0,0,0,10"/>
            <PasswordBox Name="txtConfirmNewPassword" Margin="0,0,0,10"/>
            <Button Content="Change Password" Click="btnChangePassword_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
