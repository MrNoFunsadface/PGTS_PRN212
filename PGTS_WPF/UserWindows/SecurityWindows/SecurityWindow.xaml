<Window x:Class="PGTS_WPF.UserWindows.SecurityWindows.SecurityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGTS_WPF.UserWindows.SecurityWindows"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="SecurityWindow" Height="200" Width="350">
    <Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Change Password" Width="200" Height="50" Margin="0,10" Click="btnChangePassword_Click"/>
            <Button Content="Delete Account" Width="200" Height="50" Margin="0,10" Click="btnDeleteAccount_Click"/>
        </StackPanel>
    </Grid>
</Window>
