<Window x:Class="PGTS_WPF.UserWindows.MilestoneDataWindows.CreateMilestoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="Create Milestone" Height="250" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Date" Margin="0,0,0,10"/>
            <DatePicker Name="dpDate" Margin="0,0,0,10"/>
            <TextBlock Text="Decsription" Margin="0,0,0,10"/>
            <TextBox Name="txtDescription" Margin="0,0,0,10" />
            <Button Content="Create" Click="btnCreate_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
