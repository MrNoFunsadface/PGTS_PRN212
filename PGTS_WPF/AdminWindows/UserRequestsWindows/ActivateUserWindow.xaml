<Window x:Class="PGTS_WPF.AdminWindows.UserRequestsWindows.ActivateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGTS_WPF.AdminWindows.UserRequestsWindows"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="Activate User?" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Are you sure you want to activate this user account?" TextAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Yes" Width="100" Height="30" Click="btnYes_Click" Margin="0,0,10,0"/>
                <Button Content="No" Width="100" Height="30" Click="btnNo_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
