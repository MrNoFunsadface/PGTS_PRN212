<Window x:Class="PGTS_WPF.AuthenticationWindows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGTS_WPF.AuthenticationWindows"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Title="Register" Height="500" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Name" Margin="0,0,0,10"/>
            <TextBox Name="txtName" Margin="0,0,0,10"/>
            <TextBlock Text="Email" Margin="0,0,0,10"/>
            <TextBox Name="txtEmail" Margin="0,0,0,10" />
            <TextBlock Text="Phone Number" Margin="0,0,0,10"/>
            <TextBox Name="txtPhone" Margin="0,0,0,10"/>
            <TextBlock Text="Password" Margin="0,0,0,10"/>
            <PasswordBox Name="txtPassword" Margin="0,0,0,10" />
            <TextBlock Text="Confirm Password" Margin="0,0,0,10"/>
            <PasswordBox Name="txtConfirmPassword" Margin="0,0,0,10"/>
            <Button Content="Register" Click="btnRegister_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
